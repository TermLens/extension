{
  "manifest_version": 3,
  "name": "TOS Analyzer",
  "version": "1.0",
  "description": "현재 페이지의 서비스 약관을 분석하고 요약합니다.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "__Server__"
  ],
  "action": {
    "default_title": "현재 페이지 약관 분석"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/good.png",
        "icons/bad.png",
        "icons/neutral.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
